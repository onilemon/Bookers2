<h2>User info</h2>

<table>
    <tbody>
      <tr><%= image_tag user.get_profile_image(100,100) %></tr>
        <tr>
            <td>name</td>
            <td><%= user.name %></td>
        </tr>
        <tr>
           <td>introduction</td>
           <td><%= user.introduction %></td>
        </tr>
    </tbody>
</table>

<%= link_to "編集", edit_user_path(@user.id) %>

<h2>New book</h2>
<%= form_with model:Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>

<% end %>