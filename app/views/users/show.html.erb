<%= render 'list', user: @user %>
<h2>Books</h2>
  <table>
    <thead>
      <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
      <tr>
        <th>Title</th>
      </tr>
        <tr>
          <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
      <tr>
        <td><% @books.each do |book| %>
            <%= link_to book.title, book_path %>
            <%= book.body %>
            <% end %>
        </td>
      </tr>


    </tbody>
  </table>