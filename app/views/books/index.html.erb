<%= render 'users/list', user: @user %>

<h2>Books</h2>
  <table>
    <thead>
        <tr>
            <th>Title</th>
           <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
      <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
      <tr>
        <td><% @books.each do |book| %>
              <%= link_to book.title, book_path(book.id) %>
              <%= book.body %>
            <% end %>
          </td>
      </tr>
    </tbody>
  </table>